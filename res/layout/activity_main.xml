<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <include layout="@layout/calc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFECDDFF"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_howTo"
                android:layout_width="200dp"
                android:layout_height="74dp"
                android:layout_marginTop="24dp"
                style="@style/PanelMenuButton"
                android:background="@drawable/selector_top_how_to" />

            <ImageButton
                android:id="@+id/btn_moreApps"
                android:layout_width="200dp"
                android:layout_height="74dp"
                android:layout_marginTop="24dp"
                style="@style/PanelMenuButton"
                android:background="@drawable/selector_top_moreapp" />

            <ImageButton
                android:id="@+id/btn_start_otokuApps"
                android:layout_width="360dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal|bottom"
                style="@style/PanelMenuButton"
                android:background="@drawable/selector_top_otoku_btn" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_menuBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_menu_bar" />
    </LinearLayout>

</RelativeLayout>